---
// src/layouts/Layout.astro
import { SEO } from 'astro-seo';
import '@/styles/global.css';
import ThemeManager from '@/components/modules/ThemeManager.astro';
import Navbar from '@/components/modules/Navbar.astro';
import MobileMenu from '@/components/modules/MobileMenu.astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

// CONFIGURACIÃ“N COMPARTIR
const defaultTitle = 'Luciano Stefano Melo Claps | Software Developer';
const defaultDescription =
  'Portfolio de un Desarrollador Fullstack especializado en .NET y React. Experiencia en desarrollo web, UX/UI, SEO y soluciones a medida.';
const siteUrl =
  import.meta.env.SITE || 'https://portfolio-luciano-roan.vercel.app';

const {
  title = defaultTitle,
  description = defaultDescription,
  image = '/og-image.png',
} = Astro.props;

const ogImageUrl = new URL(image, siteUrl).href;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <SEO
      title={title}
      description={description}
      openGraph={{
        basic: { title, type: 'website', image: ogImageUrl },
        image: {
          alt: 'Luciano Melo Claps Portfolio',
          width: 1200,
          height: 630,
        },
      }}
      twitter={{
        card: 'summary_large_image',
        title,
        description,
        image: ogImageUrl,
      }}
    />

    <ThemeManager />
  </head>

  <body
    class="selection:bg-accent-magenta/30 overflow-x-hidden bg-background font-sans text-text-primary antialiased selection:text-text-primary"
  >
    <!-- GRID GLOBAL -->
    <div
      class="pointer-events-none fixed inset-0 z-[-1]"
      style="
        background-size: 4.5rem 4.5rem;
        background-image: 
          linear-gradient(to right, rgb(var(--color-grid-line) / 0.05) 1px, transparent 1px),
          linear-gradient(to bottom, rgb(var(--color-grid-line) / 0.05) 1px, transparent 1px);
      "
      aria-hidden="true"
    >
    </div>

    <Navbar />
    <MobileMenu />

    <slot />
  </body>
</html>
