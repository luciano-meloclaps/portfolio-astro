---
import Card from '@/components/ui/Card.astro';

interface Props {
  value: string;
  label: string;
}
const { value, label } = Astro.props;
---

<Card class="text-center">
  <div class="font-sans text-h1 font-bold text-text-primary">
    {value}
  </div>
  <p
    class="mt-2 font-sans text-sm uppercase tracking-wider text-text-secondary"
  >
    {label}
  </p>
</Card>
