---
// ARQUITECTURA "LABEL DE VIDRIO":
// Un componente atómico, autocontenido y universal para mostrar insignias de acento.
// Calibrado para una tipografía refinada y una máxima legibilidad.

interface Props {
  text: string;
  variant?: 'accent';
  class?: string;
}
const { text, variant = 'accent', class: className } = Astro.props;

// Lógica de color robusta, encapsulada dentro del componente.
const accentColors = {
  light: '129, 76, 120',
  dark: '129, 76, 120',
};
---

<span
  class:list={[
    'flex-shrink-0 self-start rounded-pill border bg-clip-padding px-2.5 py-1 text-xxs font-normal uppercase backdrop-blur-base',
    className,
  ]}
  style=`
    --color-accent-rgb: ${accentColors.light};
    color: rgb(var(--color-accent-rgb));
    background-color: rgba(var(--color-accent-rgb), 0.1);
    border-color: rgb(var(--color-accent-rgb));
  `
>
  {text}
</span>

<style define:vars={{ darkAccentChannels: accentColors.dark }}>
  /* Sobrescribe la variable de color para el tema oscuro. */
  .dark span {
    --color-accent-rgb: var(--dark-accent-channels);
  }
</style>
