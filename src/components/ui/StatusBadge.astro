---
// src/components/ui/StatusBadge.astro
// RESPONSABILIDAD: Mostrar el estado de un proyecto con un color sem√°ntico.
type Status = 'Completed' | 'In Progress' | 'Archived';
interface Props {
  status: Status;
}
const { status } = Astro.props;

const statusConfig = {
  Completed: {
    text: 'Terminado',
    classes: 'text-green-400 border-green-500/20 bg-green-500/10',
  },
  'In Progress': {
    text: 'En Progreso',
    classes: 'text-amber-400 border-amber-500/20 bg-amber-500/10',
  },
  Archived: {
    text: 'Archivado',
    classes: 'text-gray-400 border-gray-500/20 bg-gray-500/10',
  },
};
const config = statusConfig[status];
---

<span
  class:list={[
    'flex-shrink-0 self-start rounded-pill border px-2.5 py-1 text-xxs font-semibold uppercase',
    config.classes,
  ]}
>
  {config.text}
</span>
