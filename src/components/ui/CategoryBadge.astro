---
// src/components/ui/CategoryBadge.astro
import {
  IconBrain,
  IconCloud,
  IconCode,
  IconMicrophone,
  IconPalette,
  IconLanguage,
  IconCertificate,
  IconShieldLock,
} from '@tabler/icons-react';

interface Props {
  category: string;
  class?: string;
}

const { category, class: className } = Astro.props;

// Configuración Centralizada con EFECTO NEON (Shadows)
const categoryConfig: Record<
  string,
  { icon: any; colorClass: string; label: string }
> = {
  IA: {
    icon: IconBrain,
    // Indigo para coincidir con tech-colors (#6366F1)
    colorClass:
      'text-indigo-400 bg-indigo-500/10 border-indigo-500/20 shadow-[0_0_10px_rgba(99,102,241,0.15)]',
    label: 'Inteligencia Artificial',
  },
  Cloud: {
    icon: IconCloud,
    // Sky Neon
    colorClass:
      'text-sky-400 bg-sky-500/10 border-sky-500/20 shadow-[0_0_10px_rgba(56,189,248,0.15)]',
    label: 'Cloud Computing',
  },
  Development: {
    icon: IconCode,
    // Emerald Green para coincidir con tech-colors (#10B981)
    colorClass:
      'text-emerald-400 bg-emerald-500/10 border-emerald-500/20 shadow-[0_0_10px_rgba(16,185,129,0.15)]',
    label: 'Desarrollo',
  },
  'Soft Skills': {
    icon: IconMicrophone,
    // Amber Gold para Soft Skills (#F59E0B)
    colorClass:
      'text-amber-400 bg-amber-500/10 border-amber-500/20 shadow-[0_0_10px_rgba(245,158,11,0.15)]',
    label: 'Soft Skills',
  },
  Design: {
    icon: IconPalette,
    // Pink para coincidir con tech-colors (#EC4899)
    colorClass:
      'text-pink-500 bg-pink-500/10 border-pink-500/20 shadow-[0_0_10px_rgba(236,72,153,0.15)]',
    label: 'Diseño UX/UI',
  },
  Languages: {
    icon: IconLanguage,
    // Emerald Neon
    colorClass:
      'text-emerald-400 bg-emerald-500/10 border-emerald-500/20 shadow-[0_0_10px_rgba(52,211,153,0.15)]',
    label: 'Idiomas',
  },
  Security: {
    icon: IconShieldLock,
    // Red Neon
    colorClass:
      'text-red-400 bg-red-500/10 border-red-500/20 shadow-[0_0_10px_rgba(248,113,113,0.15)]',
    label: 'Ciberseguridad',
  },
  default: {
    icon: IconCertificate,
    colorClass:
      'text-slate-400 bg-slate-500/10 border-slate-500/20 shadow-[0_0_10px_rgba(148,163,184,0.1)]',
    label: category,
  },
};

const config = categoryConfig[category] || categoryConfig['default'];
const Icon = config.icon;
---

<div
  class:list={[
    'inline-flex cursor-default select-none items-center gap-x-2 rounded-full border px-3 py-1 backdrop-blur-md transition-all duration-300 hover:scale-105',
    config.colorClass,
    className,
  ]}
>
  <Icon className="h-4 w-4" strokeWidth={1.0} />
  <span
    class="pt-[1px] text-[10px] font-bold uppercase leading-none tracking-wider"
  >
    {config.label}
  </span>
</div>
