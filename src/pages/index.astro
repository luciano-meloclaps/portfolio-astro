import AnimatedProfession from '@/components/AnimatedProfession.astro';
import AnimatedArrowIcon from '@/components/AnimatedArrowIcon.astro';
import Button from '@/components/Button.astro';
---

<Layout title="[Tu Nombre] | Portfolio Profesional">
  <main class="flex min-h-screen items-center justify-center">
    {
      /* 
      Aquí controlamos la apariencia final del componente.
      - `text-h1`: Define el tamaño, usando nuestra escala tipográfica.
      - `font-bold`: Define el peso de la fuente para AMBAS partes del texto,
        asegurando la consistencia visual que solicitaste.
