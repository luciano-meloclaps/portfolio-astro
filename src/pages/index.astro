---
import Layout from '@/layouts/Layout.astro';
import StatusChip from '@/components/StatusChip.astro';
import { IconCode, IconFocus2, IconUsersGroup } from '@tabler/icons-react';
---

<Layout title="Prueba del Componente StatusChip v3">
  <main class="flex min-h-screen items-center justify-center">
    <div class="flex flex-wrap gap-8 p-8">
      <StatusChip
        Icon={IconCode}
        label="Mode"
        value="Full-Stack"
        variant="active"
      />
      <StatusChip
        Icon={IconFocus2}
        label="Focus"
        value="Design & Performance"
        variant="positive"
      />
      <StatusChip
        Icon={IconUsersGroup}
        label="Status"
        value="Client Work"
        variant="warning"
      />
    </div>
  </main>
</Layout>
